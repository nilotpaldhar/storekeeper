{
  "name": "storekeeper",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Nilotpal Dhar",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "clean": "rimraf .next",
    "lint": "npm run lint:check",
    "lint:check": "next lint",
    "lint:fix": "eslint . --fix",
    "format": "npm run format:check",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "check:all": "npm run lint && npm run format && npm run build",
    "fix:all": "npm run lint:fix && npm run format:fix",
    "sanity:schema": "npx sanity schema extract",
    "sanity:types": "npx sanity typegen generate",
    "sanity:generate": "npm run sanity:schema && npm run sanity:types",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nilotpaldhar/storekeeper"
  },
  "bugs": {
    "url": "https://github.com/nilotpaldhar/storekeeper/issues"
  },
  "dependencies": {
    "@commercelayer/js-auth": "^6.7.2",
    "@commercelayer/sdk": "^6.44.0",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.2",
    "@sanity/icons": "^3.7.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/vision": "^3.89.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.509.0",
    "next": "15.3.2",
    "next-safe-action": "^8.0.3",
    "next-sanity": "^9.11.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanity": "^3.89.0",
    "slugify": "^1.6.6",
    "styled-components": "^6.1.18",
    "tailwind-merge": "^3.2.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "commitizen": "^4.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5"
  }
}
